# ============================================================
# Magento B2B GraphQL Extractor - Environment Template
# Copy to .env and fill in your values before running.
# ============================================================

# --- Magento Connection ---
MAGENTO_STORE_URL=https://your-magento-store.example.com
MAGENTO_USERNAME=your-company-admin@example.com
MAGENTO_PASSWORD=your-password

# --- Output ---
OUTPUT_DIR=./output
OUTPUT_RETENTION_DAYS=30
# SAVE_JSON=true -> write extracted data to OUTPUT_DIR
SAVE_JSON=true

# --- Debug ---
# DEBUG=true -> enable verbose output
DEBUG=false

# --- Feature Flags ---
# Use REST /company/role endpoint to supplement GraphQL data with explicit
# allow/deny permissions per role. Set to false to skip (role-permission
# links will be unavailable but extraction will still complete).
USE_REST_ROLE_SUPPLEMENT=true

# --- CE Mode (optional) ---
# Enable CE fallback mode to extract real customer identities from a
# Magento Community Edition instance and wrap them in synthetic B2B
# structures. Requires admin credentials (not customer credentials).
# CE_MODE=true
# MAGENTO_ADMIN_USERNAME=admin
# MAGENTO_ADMIN_PASSWORD=Admin123!@#

# --- CE Mode (optional) ---
# Enable CE fallback mode for Magento Community Edition instances that lack
# B2B GraphQL schema. Fetches real CE customers via REST and wraps them in
# synthetic B2B company/team/role structures for the OAA pipeline.
# Requires admin credentials (not customer credentials) for REST API access.
# CE_MODE=true
# MAGENTO_ADMIN_USERNAME=admin
# MAGENTO_ADMIN_PASSWORD=Admin123!@#
