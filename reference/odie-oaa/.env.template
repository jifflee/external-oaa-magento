# Veza Configuration
VEZA_URL=https://your-tenant.vezacloud.com
VEZA_API_KEY=your_api_key_here

# Provider Configuration
PROVIDER_NAME=Odie

# ==============================================================================
# PROVIDER PREFIX (Conflict Avoidance)
# ==============================================================================
# If the preflight check detects existing providers with the same name,
# uncomment and set this to add a prefix to all integration names.
#
# Without prefix: "Fraud_Detection_AI"
# With PROVIDER_PREFIX=ODIE: "ODIE_Fraud_Detection_AI"
#
# Run "python run.py --dry-run" first to check for conflicts.
# PROVIDER_PREFIX=ODIE

# Input/Output Paths
# Option 1: Just the filename (looks in ./data/ folder)
CSV_FILENAME=odie.csv

# Option 2: Full path (overrides CSV_FILENAME if set)
# CSV_INPUT_PATH=./data/sample_permissions.csv

# Output directory (timestamped subfolders created automatically)
OUTPUT_DIR=./output

# Retention policy: auto-delete output folders older than X days (0 = no cleanup)
OUTPUT_RETENTION_DAYS=180

# Processing Options
DRY_RUN=true
SAVE_JSON=true
DEBUG=false

# ==============================================================================
# PROXY CONFIGURATION (Optional)
# ==============================================================================
# Uncomment if your network requires proxy to reach Veza cloud.
# These are loaded into os.environ and automatically used by Python's
# requests library (which oaaclient uses for API calls).

# HTTP_PROXY=http://proxy.company.com:8080
# HTTPS_PROXY=http://proxy.company.com:8080
# NO_PROXY=localhost,127.0.0.1
